<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/tab_bottom_dark"></solid>
                </shape>
            </item>
            <item android:top="-1dp" android:right="-1dp" >
                <shape>
                    <solid android:color="@color/tab_bottom_dark"></solid>
                    <stroke android:width="1dp" android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item >
                <shape>
                    <solid android:color="@color/tab_bottom_light"></solid>
                </shape>
            </item>
            <item android:bottom="-1dp" android:right="-1dp" android:top="-1dp" >
                <shape>
                    <solid android:color="@color/tab_bottom_light"></solid>
                    <stroke android:width="1dp" android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>